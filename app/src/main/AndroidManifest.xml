<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="all">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/blog_app_icon_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/blog_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlogApp">
        <activity
            android:name=".main.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".main.ProfilePage"
            android:exported="false" />
        <activity
            android:name=".main.EditProfile"
            android:exported="false" />
        <activity
            android:name=".main.ReadMore"
            android:exported="false" />
        <activity
            android:name=".main.AddArticle"
            android:exported="false" />
        <activity
            android:name=".main.HomePage"
            android:exported="true" />
        <activity
            android:name=".main.SavedArticlesActivity"
            android:exported="false" />
        <activity
            android:name=".register.ForgotPassword"
            android:exported="false" />
        <activity
            android:name=".register.RegisterPage"
            android:exported="false" />
        <activity
            android:name=".register.LogInScreen"
            android:exported="false" />
        <activity
            android:name=".register.WelcomeScreen"
            android:exported="false" />
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>